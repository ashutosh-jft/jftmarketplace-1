<h3> This is Registration Page </h3>
<div class="container">
    <form {{action "registerUser" model on="submit" }}><br/>
        <h2 class="w3-wide w3-opacity text-center">User Registration Form</h2>
        <div class="text-danger">
                <ul>
                    {{#each model.msg as | ms |}}
                    <li>{{ms}}</li>
                    {{/each}}
                </ul>
        </div>

        <div class="jumbotron">
            <div class="form-group">
                <label for='fname'>First Name</label> 
                {{input value=model.fname id='fname' class="form-control"}}
            </div>

            <div class="form-group">
                <label for='lname'>Last Name</label> 
                {{input value=model.lname id='lname' class="form-control"}}
            </div>

            <div class="form-group">
                <label for='email'>Email Id</label> 
                {{input value=model.email id='email' type="email" class="form-control"}}
            </div>

            <div class="form-group">
                <label for='password'>Password</label> 
                {{input value=model.password id='password' type="password" class="form-control"}}
            </div>

            <div class="form-group">
                <label for='confirmPassword'>Confirm Password</label> 
                {{input value=model.confirmPassword id='confirmPassword' type="password" class="form-control"}}
            </div>

            <div class="form-group">
                <label for='gender'>Gender</label>
                <select class="form-control">
                    <option value="select">Select</option>
                    <option value="male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

            <div class="form-group text-center">
                <button class="btn btn-primary" type="submit">Register</button>
                <button class="btn" type="button">Reset</button>
            </div>
        </div>
    </form>
</div>
{{outlet}}